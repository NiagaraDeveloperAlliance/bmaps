{{#if imageSrc}}
<div class="popup-image"><img src={{imageSrc}}></div>
{{/if}}
{{#if description}}
<div class="popup-description">{{description}}</div>
{{/if}}
<div class="popup-alarm-count">{{alarmCount}} Alarms</div>
<div class="info-window-props-container">
  <table class="table table-bordered"><tbody>
  {{#if rows}}
    {{#each rows}}
      <tr>
       <td>{{displayName}}</td>
       <td><div {{#if alarm}}class="has-alarm"{{/if}}>{{value}}</div></td>
      </tr>
    {{/each}}
  {{/if}}
  </tbody></table>
</div>